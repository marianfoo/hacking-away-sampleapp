{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "sourceMap": false,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["@openui5/ts-types-esm"],
    "paths": {
      "hacking/away/sampleapp/*": ["./src/*"],
      "hacking/away/samplelib/*": ["./node_modules/@local/library/src/hacking/away/samplelib/*"]
    }
  },
  "include": ["./src/**/*", "./node_modules/@local/library/src/hacking/away/samplelib/**/*"],
  "exclude": ["./test"]
}
