{
  "name": "hacking.away.sampleapp",
  "version": "1.0.0",
  "description": "UI5 Application: sample",
  "author": "Peter Muessig",
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "node ./.husky/skip.js || husky install",
    "clean": "rm -rf docs",
    "build": "npm-run-all build:ts build:ui5",
    "build:opt": "npm-run-all build:ts build:ui5:opt",
    "build:ts": "babel src --out-dir webapp --source-maps true --extensions \".ts,.js\" --copy-files",
    "build:ui5": "ui5 build --clean-dest",
    "build:ui5:opt": "ui5 build self-contained --clean-dest --all",
    "start": "npm-run-all --parallel watch:ts start:server start:ui5",
    "watch:ts": "babel src --out-dir webapp --source-maps true --extensions \".ts,.js\" --copy-files --watch",
    "start:ui5": "ui5 serve --port 8080 -o index.html",
    "start:dist": "ui5 serve  --port 8080 -o index.html --config ui5-dist.yaml",
    "start:server": "json-server --watch server/db.json",
    "ts-typecheck": "tsc --noEmit",
    "test": "cd test && wdio run wdio.conf.ts",
    "lint": "eslint src",
    "lint:staged": "lint-staged",
    "lint:commit": "commitlint -e",
    "prettier": "prettier --write .",
    "prettier:staged": "pretty-quick --staged --verbose",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "hooks:pre-commit": "npm-run-all --sequential prettier:staged lint:staged",
    "hooks:pre-push": "npm-run-all --sequential lint:commit"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-typescript": "^7.17.12",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@openui5/ts-types-esm": "1.102.0",
    "@prettier/plugin-xml": "^2.2.0",
    "@types/jquery": "3.5.14",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@ui5/cli": "^2.14.9",
    "@wdio/cli": "^7.19.7",
    "@wdio/local-runner": "^7.19.7",
    "@wdio/mocha-framework": "^7.19.7",
    "@wdio/spec-reporter": "^7.19.7",
    "axios": "^0.27.2",
    "babel-preset-transform-ui5": "^7.0.5",
    "chromedriver": "^101.0.0",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "json-server": "^0.17.0",
    "mobx": "^6.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-properties": "^0.1.0",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4",
    "ui5-middleware-livereload": "^0.5.11",
    "ui5-middleware-simpleproxy": "^0.8.2",
    "ui5-tooling-modules": "0.3.0",
    "wdio-chromedriver-service": "^7.3.2",
    "wdio-ui5-service": "^0.9.0"
  },
  "ui5": {
    "dependencies": [
      "ui5-middleware-livereload",
      "ui5-middleware-simpleproxy",
      "ui5-tooling-modules"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
